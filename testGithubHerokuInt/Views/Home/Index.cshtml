@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to my playground</h1>
    <p>This site was created to do experiments with web technologies, this site is using Net Core, Bootstrap and
        is deployed on Heroku, i will use this space to store my learnings in web technologies and more, take a look, you can
        just ignore it or not.
    </p>
</div>

<br />
<hr />
<div class="text-center">
    <h1 class="display-6">My favorite mangas!</h1>
    <p>Carousel of images and description of my favorite mangas created with bootstrap.
    </p>
</div>

<div class="cajaCarousel w-75 p-3 mx-auto">
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="~/images/gitscover.jpg" class="d-block w-100" alt="Ghost in the shell">
      <div class="carousel-caption d-none d-md-block">
        <h5>Ghost in the shell</h5>
        <p>Sci-fi</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/images/dorohedoro.jpg" class="d-block w-100 h-75" alt="dorohedoro">
      <div class="carousel-caption d-none d-md-block">
        <h5>Dorohedoro</h5>
        <p>Fantasy</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="~/images/kirie.jpg" class="d-block w-100" alt="Uzumaki">
      <div class="carousel-caption d-none d-md-block">
        <h5>Uzumaki</h5>
        <p>Horror</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
</div>

